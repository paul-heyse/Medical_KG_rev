{
  "title": "API Latency",
  "uid": "api-latency",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "table",
      "title": "P95 Latency by Endpoint",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (le, path))",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latency Trend (P95)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[$__interval])) by (le, path))",
          "legendFormat": "{{path}}"
        }
      ]
    }
  ]
}
